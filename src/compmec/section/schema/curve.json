{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "http://example.com/example.json",
  "definitions": {
    "degree": {
      "type": "integer",
      "minimum": 1
    },
    "node_label": {
      "type": "integer",
      "minimum": 1
    },
    "curve_label": {
      "type": "integer",
      "minimum": 1
    },
    "node": {
      "type": "array",
      "items": [
          {"$ref": "#/definitions/node_label"},
          {"type": "number"},
          {"type": "number"}
      ]
    },
    "knotvector": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "curve": {
      "type": "object",
      "required": [
        "label",
        "degree",
        "knotvector",
        "ctrlpoints"
      ],
      "properties": {
        "label": {"$ref": "#/definitions/curve_label"},
        "degree": {"$ref": "#/definitions/degree"},
        "knotvector": {"$ref": "#/definitions/knotvector"},
        "ctrlpoints": {
            "type": "array",
            "items": {"$ref": "#/definitions/node_label"}
        },
        "weights": {
            "type": "array",
            "items": {"type": "number"}
        }
      }
    }
  },
  "type": "object",
  "title": "Root Schema",
  "required": [
    "nodes",
    "curves"
  ],
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/node"
      }
    },
    "curves": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/curve"
      }
    }
  }
}